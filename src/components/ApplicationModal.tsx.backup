    full_name: '',
    email: '',
    phone: '',
    experience_level: '',
    current_occupation: '',
    why_join: '',
    payment_plan: 'upfront'
  });

  if (!isOpen) return null;

  const handleSubmit = async (e: FormEvent) => {
    e.preventDefault();
    setLoading(true);

    try {
      const { data, error } = await supabase
        .from('applications')
        .insert([formData])
        .select()
        .maybeSingle();

      if (error) throw error;

      if (data) {
        setSubmitted(true);
        const paymentLinks = {
          upfront: 'https://rzp.io/rzp/48cDvUQF',
          trial: 'https://rzp.io/rzp/YYfmuga',
          monthly: 'https://rzp.io/rzp/QaCoRHi',
          test: 'https://rzp.io/rzp/r3IMtie9'
        };

        const paymentUrl = paymentLinks[formData.payment_plan as keyof typeof paymentLinks];

        setTimeout(() => {
          window.location.href = paymentUrl;
        }, 2000);
      }
    } catch (error) {
      console.error('Error submitting application:', error);
      alert('Failed to submit application. Please try again.');
    } finally {
      setLoading(false);
    }
  };

